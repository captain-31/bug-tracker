<div class="max-w-md mx-auto my-8 p-6 bg-white rounded-lg shadow-md">
    <h4 class="text-lg font-bold mb-4">Add an Issue</h4>

    <form method="POST" action="/issues/create/<%= projectId %>" class="space-y-4">
        <div>
            <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name:</label>
            <input type="text" id="name" name="name" value="<%= data.name || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Issue name">
        </div>
        
        <div>
            <label for="description" class="block text-gray-700 text-sm font-bold mb-2">Description:</label>
            <input type="text" id="description" name="description" value="<%= data.description || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Issue description">
        </div>
        
        <div>
            <label for="author" class="block text-gray-700 text-sm font-bold mb-2">Author:</label>
            <input type="text" id="author" name="author" value="<%= data.author || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Author's name">
        </div>
        
        <div>
            <label for="labels" class="block text-gray-700 text-sm font-bold mb-2">Choose Labels:</label>
            <select name="label" id="labels" multiple class="w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
                <% if(labels.length > 0) { %>
                    <% for (var i = 0; i < labels.length;  i++ ) { %>
                        <option value="<%= labels[i] %>"><%= labels[i] %></option>
                    <% } %>
                <% } else { %>
                    <option value="design">Design</option>
                    <option value="bug">Bug</option>
                    <option value="coding">Coding</option>
                    <option value="ux">UX</option>
                <% } %>
            </select>
        </div>

        <div class="flex items-center space-x-4">
            <input type="text" id="customLabel" placeholder="Enter custom label" class="flex-1 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            <button type="button" onclick="addCustomLabel()" class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">Add Custom Label</button>
        </div>
        
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">Submit</button>
    </form>

    <% if(error) { %>
        <p class="font-semibold text-red-500 py-3"><%= error %></p>
    <% } %>

    <% if(success) { %>
        <p class="font-semibold text-green-500 py-3"><%= message %></p>
    <% } %>

    <a href="/issues/<%= projectId %>" class="block mt-4 text-blue-500 hover:text-blue-700">Go back</a>
</div>